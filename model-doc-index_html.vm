## <!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>${model.name} model</title>
<STYLE TYPE="text/css"> 
table {
  border: thin solid Gray;
  border-collapse: collapse;
}
th,td {
  border: thin solid Gray;
  margin-left: 10px;
  margin-right: 10px;
  padding-left: 10px;
  padding-right: 10px;	
}
th {
  background-color: #B3AFDE;
}
</STYLE> 

</head>
<body>
<h2>Model "$model.name" </h2>
Version : <b>$model.version</b> <br>
Description : <b>$model.description</b> <br>
<br>
Documentation generated by <a href="https://www.telosys.org/">Telosys</a> ( $now.date $now.time )<br>
<br>
#set($count=0)
#set($warnings=0)
<table>
<tr> 
 <th>&nbsp</th> 
 <th>ENTITY</th> 
 <th>ID</th> 
 <th>&nbsp</th> 
 <th>TABLE</th> 
</tr>
#foreach ( $entity in $selectedEntities )
#set($count=$count+1)
#if( ! $entity.hasPrimaryKey() ) 
#set($warning = "<span style=${QUOT}color: red;${QUOT}><b>(!)</b></span>")
#else
#set($warning = "")
#end
#set($href = "href=${QUOT}./${model.name}/${entity.name}.html${QUOT}")
<tr>
<td align="right">$count</td>

<td><a $href>${entity.name}</a> $warning </td>

<td>
#if( $entity.hasPrimaryKey() )
${entity.keyAttributesCount} attribute#if( $entity.keyAttributesCount > 1 )s#end
#else
<span style="color: red;">NO ID (!)</span>
#set($warnings=$warnings+1)
#end
</td>

<td>
#if($entity.isJoinEntity())ðŸ”—join-entity &nbsp;#end
#if($entity.isAbstract())&lt;&lt;abstract&gt;&gt; &nbsp;#end
#if($entity.isAggregateRoot())aggregate-root &nbsp;#end
#if($entity.isReadOnly())(read-only)#end
</td>

<td>${entity.sqlTableName}</a> </td>
</tr>
#end 
</table>

#if ( $warnings > 0 ) 
<p style="color: red;" >NB : <b>$warnings warning(s)</b> in this model !</p> 
#end
## ==============
</body>
</html>
